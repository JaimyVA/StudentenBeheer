@model StudentenBeheer.Models.Inschrijvingen

@{
    ViewData["Title"] = "Verwijderen";
}

<h1>Verwijder</h1>

<h3>Ben je zeker dat je deze inschrijving wil verwijderen?</h3>
<div>
    <h4>Inschrijvingen</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Module)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Module.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Lastname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InschrijvingsDatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InschrijvingsDatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AfgelegdOp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AfgelegdOp)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resultaat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resultaat)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar Overzicht</a>
    </form>
</div>
